{
  "name": "code-indexer",
  "version": "1.0.0",
  "description": "Production-grade semantic code search with local-first architecture",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "codeindex": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsx watch src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "code-search",
    "semantic-search",
    "vector-search",
    "code-indexer",
    "local-embeddings"
  ],
  "author": "Quadropic Labs",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "hnswlib-node": "^3.0.0",
    "ignore": "^5.3.1",
    "ora": "^8.0.1",
    "p-limit": "^5.0.0",
    "tree-sitter": "^0.21.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/chokidar": "^2.1.3",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
